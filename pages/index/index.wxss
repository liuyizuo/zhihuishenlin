/**index.wxss**/
.mapview{
  width: 100vw;
  height: 100vh;
  position: relative;
}
.recover{
  width: 70rpx;
  height: 70rpx;
  background: #fff;
  position: absolute;
  top: 80rpx;
  right: 50rpx;
  border-radius: 35rpx;
}
.recover cover-image{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}