/* pages/information/information.wxss */
.navTop {
  background: linear-gradient(to right, #17d399, #04b0a4);
  color: white;
  text-align: center;
  line-height: 174rpx;
  overflow: hidden;
  position: fixed;
  width: 750rpx;
  height: 120rpx;
  top: 0;
  left: 0;
  z-index: 100;
}
.content { 
  /* padding-top: 120rpx; */
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background: #efefef;
  letter-spacing: 2rpx;
  padding-bottom:20px;
}

.seiperImg {
  width: 100%;
}

.identity-prove {
  background: white;
  margin: 20rpx 0;
  padding: 0 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.identity-top {
  width: 100%;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 70rpx;
  /* line-height: 78rpx; */
  color: #17d399;
  border-bottom: 1px solid #dedede;
}

.identity-top-text {
  max-width: 300rpx;
  border-bottom: 1px solid #17d399;
  display: flex;
  align-items: right;
  justify-content: space-around;
  flex-direction: column;
  margin-bottom:-1px;
}

.identity-top-place{
  max-width: 400rpx;
  height: 70rpx;
  display: flex;
  align-items: right;
  justify-content: space-around;
  flex-direction: column;
}

.identity-content {
  width: 100%;
  font-size: 26rpx;
  padding: 10rpx 0;
}

.identity-content view {
  color: #5b5b5b;
  min-height: 50rpx;
  line-height: 50rpx;
}

.identity-content view text {
  color: #999;
}

.detailed-content {
  background: white;
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.detailed-content-title {
  font-size: 30rpx;
  height: 70rpx;
  line-height: 78rpx;
  color: #17d399;
  border-bottom: 1px solid #dedede;
  position: relative;
}

.detailed-content-line {
  width: 160rpx;
  border-bottom: 1px solid #17d399;
  height: 1px;
  position: absolute;
  left: 0;
  top: 68rpx;
}
.location{
  position:absolute;
  top:18rpx;
  right:10rpx;
  border:1px solid #17d399;
  height:40rpx;
  line-height:40rpx;
  border-radius:6rpx;
  padding:0 2rpx;
}

.detailed-content-text {
  font-size: 26rpx;
  padding: 10rpx 0;
}

.detailed-content-text .detailed-text {
  display: flex;
  flex-direction: row;
  /* justify-content: space-between; */
}
.detailed-content-text .detailed-text view {
  width: 50%;
}
.detailed-content-text .detailed-num view{
  width: 50%;
  float: left;
}
.detailed-num::after{display: block;height: 0;clear: both;content: ''}
.detailed-content-text view {
  min-height: 50rpx;
  line-height: 50rpx;
  color: #5b5b5b;
}

.detailed-content-text view text {
  color: #999;
}

/* 养护任务 */

.maintenance-task {
  background: white;
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.main-total {
  margin-top: 20rpx;
}

.main-tasktitle_01 {
  height: 56rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #6a6a6a;
  margin-bottom: 14rpx;
}

.main-tasktitle_01 text {
  color: #ff7200;
}

.main-taskzhu {
  display: inline-block;
  height: 32rpx;
  width: 4rpx;
  background: #17d399;
  margin-right: 6rpx;
}

.table {
  border: none;
  border-right: 0;
  border-bottom: 0;
  width: 100%;
}

.table .tr:nth-of-type(1) {
  background: linear-gradient(to right, #17d399, #04b0a4);
  /* border-bottom: 1px solid #dadada; */
  color: white;
}

.tr {
  width: 100%;
  display: flex;
  justify-content: space-around;
}

.th, .td {
  padding: 10rpx;
  text-align: center;
  width: 100%;
  height: 42rpx;
  line-height: 42rpx;
}

.td {
  color: #999;
}
.curingMans{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.th {
  font-weight: 400;
}

.next-three {
  margin-bottom: 30rpx;
}

.next-three .td {
  height: 80rpx;
  padding-bottom: 4rpx;
  border-bottom: 1px solid #d7d7d7;
}

/* 生长环境 */

.growth-environment {
  background: white;
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.section {
  margin: 20rpx 0;
  /* height: 140rpx; */
}

.area-text {
  color: #999;
  width: 100%;
  text-indent: 2em;
  height:auto;
}
