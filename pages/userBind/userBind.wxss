/* pages/userBind/userBind.wxss */

page{
  width: 100%;
  height: 100%;
}
.contentBox{
  padding-top: 1rpx;
  height:100%;
  flex-direction:column;
  align-items:center;
  justify-content:space-between;
  box-sizing:border-box;
  background:#17d399;
  overflow:hidden;
}
.bgtree{
  width: 100%;
  height: 180rpx;
  position: fixed;
  top: 0;
}
.formBox{
  height:100%;
  margin-top: 180rpx;
  padding: 20rpx;
  background: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.titleBox{
  margin: 10rpx 0 20rpx 0;
}
.title{
  font-size:20px;
}
.explainBox{
  margin: 15px;
  color: #FE0505;
}
.explain{
  font-size: 14px;
  color: #666;
}
.iptBox{
  padding: 20rpx 15rpx 10rpx 0;
  border-bottom: 1px solid #efefef;
  overflow: hidden;
}
.iptBox view{
  height:40px;
  line-height:46px;
  float: left;
  color: #FE8132;
  font-size: 18px;
  margin-right:5rpx;
}
.iptBox text{
  height:40px;
  line-height:40px;
  color: #333;
  float: left;
  font-size: 15px;
}
.iptBox input{
  height:40px;
  line-height:40px;
  text-align: right; 
  float: right;
  color: #333;
}
.submit{
  color:#fff;
  background: #17d399;
  margin-top: 100px;
}