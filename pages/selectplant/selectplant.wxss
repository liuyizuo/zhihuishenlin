/* pages/selectplant/selectplant.wxss */
.headBox{
  width: 100vw;
  height: 600rpx;
  position: relative;
}
.selectImg{
  width: 100%;
  height: 100%;
}
.headBox view{
  width: 100vw;
  position: absolute;
  color: #fff;
  text-align: center;
  /* left: 50%; */
  /* transform: translateX(-50%); */
}
.selectName{
  bottom: 60rpx;
  font-size: 38rpx;
}
.selectDesc{
  bottom: 10rpx;
  font-size: 28rpx;
}


.listBox{
  width: 100vw;
  position: relative;
}
.arrow{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}
.left{
  left: 0rpx;
}
.right{
  right: 0rpx;
}
.listScroll{
  width: 100vw;
  height: 400rpx;
  position: relative;
  white-space: nowrap;
  box-sizing: border-box;
}
.listItem{
  width: 670rpx;
  margin: 60rpx 40rpx;
  box-shadow: 1rpx 0rpx 30rpx #ccc;
  font-size:22rpx;
  box-sizing: border-box;
  display: inline-block;
}
.listItem image{
  width: 320rpx;
  height: 240rpx;
  margin: 15rpx;
}
.listRight{
  width: 280rpx;
  float: right;
  margin: 20rpx;
}
.listRight view{
  text-align: center;
}
.listTitle{
  font-size: 36rpx;
  padding: 20rpx 0 10rpx;
}
.listText{
  font-size: 28rpx;
  padding: 5rpx 0;
}
.listFoot{
  color: #aaa;
  font-size: 26rpx;
  padding: 10rpx;
  margin-top: 15rpx;
  border-top: 1rpx solid #aaa;
}

.recamera{
  width: 300rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background: #17d399;
  border-radius: 35rpx;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}
.rechoose{
  color: #999;
  font-size: 26rpx;
  text-align: center;
  margin-top: 20rpx;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}