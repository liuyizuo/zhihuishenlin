/* pages/volunteer/volunteer.wxss */
page{
  width: 100%;
  height: 100vh;
}
.contentBox{
  width: 100%;
  height: 100%;
  background: #fff;
}
.treeHead{
  width: 100%;
  height: 280rpx;
  position: relative;
  background: #17d399;
}
.bgtree{
  width: 100%;
  height: 210rpx;
  position: absolute;
  bottom: 30rpx;
}
.userInfo{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}
.userpic{
  width: 110rpx;
  height: 110rpx;
}
.userpicBox{
  width: 110rpx;
  height: 110rpx;
  border-radius: 55rpx;
  overflow: hidden;
  margin-top: 30rpx;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}
.username{
  margin-top: 10rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
}
.getuserinfo{
  margin-top: 100rpx;
}

.btnli{
  width: 690rpx;
  height: 90rpx;
  margin: 20rpx 20rpx;
  padding: 10rpx;
  border-radius: 10rpx;
  box-shadow: #aaa 0rpx 0rpx 4rpx;
  overflow: hidden;
  position: relative;
}
.iconic{
  width: 90rpx;
  height: 90rpx;
  float: left;
}
.treepic{
  width: 160rpx;
  height: 90rpx;
  float: left;
  border-radius: 5rpx;
}
.text{
  float: left;
  font-size: 30rpx;
  color: #333;
  position: absolute;
  top: 50%;
  left: 120rpx;
  transform: translateY(-50%);
}
.treetext{
  float: left;
  font-size: 30rpx;
  color: #333;
  position: absolute;
  top: 50%;
  left: 200rpx;
  transform: translateY(-50%);
}
.arrow{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 50%;
  right: 15rpx;
  transform: translateY(-50%);
}

.unbind{
  float: right;
  color: #666;
  margin-right:26rpx;
  font-size:22rpx;
}
.returnli{
  float: left;
  color: #666;
  margin: 10rpx 0rpx 10rpx 26rpx;
  font-size: 22rpx;
}
.block{
  width: 750rpx;
  height: 400rpx;
  line-height: 400rpx;
  text-align: center;
  font-size: 28rpx;
}

.popupBox{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
}
.popup{
  width: 500rpx;
  background: #fff;
  border-radius: 16rpx;
  position: absolute;
  left: 50%;
  top: 25%;
  transform: translateX(-50%);
}
.popup image{
  width: 500rpx;
  height: 150rpx;
}
.title{
  text-align: center;
  font-size: 34rpx;
  font-weight: 600;
  margin-top: 30rpx;
}
.titlecon{
  text-align: center;
  margin: 30rpx 0;
}
.popbtn{
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #2BB765;
  color: #fff;
  font-size: 28rpx;
}
.cancel{
  float: left;
  margin: 50rpx 0 30rpx 20rpx; 
}
.ok{
  float: right;
  margin: 50rpx 20rpx 30rpx 0; 
}