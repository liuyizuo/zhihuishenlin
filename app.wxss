/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
view{
  font-size:26rpx;
}
.tabBar{
  width: 100vw;
  height: 80rpx;
  padding-top: 5rpx;
  position: fixed;
  background: #fff;
}
.menu-item{
  width: 20vw;
  height: 100%;
  float: left;
  text-align: center;
}
.menu-item image{
  width: 6vw;
  height: 6vw;
}
.menu-item .menu-scan{
  width: 10vw;
  height: 10vw;
}
.menu-item text{
  font-size: 24rpx;
  display: block;
}